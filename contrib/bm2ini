#!/bin/bash -e

#
# Convert old package bash modules into new configobj ini modules
#
# Options:
# -a  Import all modules
# -n  Path to new packages module folder
# -o  Path to old packages module folder (with the .bm files)
#

new=~/svn/fullstory/fll-builder/branches/pyfll/packages/
old=~/svn/fullstory/fll-builder/trunk/etc/fll-builder/packages/

while getopts an:o: opt; do
	case "${opt}" in
		a)
			((ALL++))
			;;
		n)
			new=${OPTARG}
			;;
		o)
			old=${OPTARG}
			;;
		\?)
			echo "wtf is '${opt}' ?"
			exit 1
			;;
	esac
done

[[ -d ${new} ]] || {
	echo "Path to new folder does not exist: ${new:-none given}"
	exit 1
}

[[ -d ${old} ]] || {
	echo "Path to old folder does not exist: ${new:-none given}"
	exit 1
}

mkdir -p ${new}/packages.d

bm2ini() {
	awk -v headers=${1} '
	BEGIN {
	  if (headers == 1) {
	    print "desc = \"\"\""
	    print "\"\"\"\n"
	    print "repos = \"\"\""
	    print "\"\"\"\n"
	  }
	}

	{
	  if (/^FLL_PACKAGES/)
	    print "packages = \"\"\""
	  else if (/^FLL_PACKAGE_DEPMODS/)
	    print "deps = \"\"\""
	  else if (/FLL_BUILD_ARCH/)
	    print $5 " = \"\"\""
	  else if (/^[ \t]*)/)
	    print "\"\"\"\n"
	  else if (/^[ \t]*#/)
	    comment[i++] = $0
	  else if ($1 ~ /^(FLL.+|if|fi)$/)
	    next
	  else if ($1)
	    print "\t" $1
	}

	END {
	  for (c in comment)
	    print comment[c]
	}' ${2}
}

pushd ${old} >/dev/null

	for bm in *.bm packages.d/*.bm;	do
		if [[ -f ${bm} ]]; then
			newm=${new}/${bm%.bm}
		else
			continue
		fi

		do_headers=1
		case "${bm}" in
			*/distro.bm|*/utils-essential.bm)
				echo "Skipping ${bm}..."
				continue
				;;
		esac
		if [[ -f ${newm} ]]; then
			sed -n '/^desc = """/,/^"""/p' ${newm}    >  ${newm}~
			sed -n '/^repos = """/,/^"""/p' ${newm}	  >> ${newm}~
			sed -n '/^debconf = """/,/^"""/p' ${newm} >> ${newm}~
			sed -n '/^early = """/,/^"""/p' ${newm}   >> ${newm}~
			rm -f ${newm}
			if [[ -s ${newm}~ ]]; then
				do_headers=0
				sed '/^"""/G' ${newm}~ > ${newm}
				rm -f ${newm}~
			fi
		elif [[ -z ${ALL} ]]; then
			continue
		fi
		
		echo "Converting $(basename ${bm}) to ini format..."
		bm2ini ${do_headers} ${bm} >> ${newm}
	done

popd >/dev/null
