#!/bin/sh -e

say() {
	echo "I: $@..."
}

do_postinst() {
	# create grub2 ElTorito support
	if [ -w /etc/dhcp/dhclient.conf ]; then
		say 'isc-dhcp-client: omit requesting host-name, #648676, #609851.'
		sed -i s/\,[\ \t]*host-name\,/\,/ /etc/dhcp/dhclient.conf
	fi
}

case "${1}" in
	postinst)
		do_postinst
		;;
	*)
		echo "Usage: ${0} postinst"
		;;
esac

:
